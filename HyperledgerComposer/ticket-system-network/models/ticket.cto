/**
 * Sample business network definition.
 */
namespace org.openticket

// Assets
asset Ticket identified by ticketId {
  o String ticketId
  o TicketStatus status
  o String subject
  o String description
  o String[] notes
  o DateTime openTime
  o DateTime updateTime
  // o DateTime closedTime
  --> Technician techinician
  --> Client client
}


// Participants
abstract participant Person identified by email {
  o String email
  o String firstName
  o String lastName
}

abstract participant Reporting identified by reportType {
  o String reportType
  o Long ticketsClosed
  o Long ticketsOpened
  o String avgTimeOpen
  o String avgTimeUpdated
}

participant Technician extends Person {  
}

participant Client extends Person {  
}

participant AllTimeReport extends Reporting {
  o ReportingType ALLTIME
}

participant YearlyReport extends Reporting {
  o ReportingType YEARLY
}

participant MonthlyReport extends Reporting {
  o ReportingType MONTHLY
}

participant WeeklyReport extends Reporting {
  o ReportingType WEEKLY
}

participant DailyReport extends Reporting {
  o ReportingType DAILY
}


// Enumerations
enum TicketStatus {
  o OPEN
  o UPDATED
  o CLOSED
}

enum ReportingType {
  o ALLTIME
  o YEARLY
  o QUARTERLY
  o MONTHLY
  o WEEKLY
  o DAILY
}


// Transactions
abstract transaction TicketTransaction {
  --> Ticket ticket
}

transaction SetupSystem {
}

transaction CreateTicket {
}

transaction AddNote extends TicketTransaction {
  o String note
}

transaction CloseTicket extends TicketTransaction {
}

transaction AssignTicket extends TicketTransaction{
  --> Technician techinician
}

transaction ChangeClient extends TicketTransaction {
  --> Client client
}

